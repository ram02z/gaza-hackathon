{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",
    "tests"
  ]
}
